generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Character {
    id      String  @id @default(uuid())
    name    String  @unique
    deleted DateTime?
	eventTypes EventType[]
}

model EventType {
    id String @id @default(uuid())
	name String @unique
	color EventColor
	participants Character[]
}

enum EventColor {
	BLACK
	WHITE
	SLATE
	GRAY
	ZINC
	NEUTRAL
	STONE
	RED
	ORANGE
	AMBER
	YELLOW
	LIME
	GREEN
	EMERALD
	TEAL
	CYAN
	SKY
	BLUE
	INDIGO
	VIOLET
	PURPLE
	FUCHSIA
	PINK
	ROSE
}
