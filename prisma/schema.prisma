generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Character {
    id         String      @id @default(uuid())
    name       String      @unique
    deleted    DateTime?
    eventTypes EventType[]
}

model EventType {
    id           String      @id @default(uuid())
    name         String      @unique
    participants Character[]
    color        EventColor  @relation(fields: [eventColorId], references: [id])
    eventColorId String
}

model EventColor {
    id        String      @id @default(uuid())
    name      String      @unique
    textCSS   String      @unique
    bgCSS     String      @unique
    EventType EventType[]
}
